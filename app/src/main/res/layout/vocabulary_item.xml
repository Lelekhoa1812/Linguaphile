<!-- vocabulary_item.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white"
    android:padding="8dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@color/grey">

        <!-- Vocabulary Name and Options Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:gravity="center_vertical">
            <!-- Name Holder -->
            <TextView
                android:id="@+id/vocab_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/vrName"
                android:textColor="@color/colorTextRV"
                android:textStyle="italic"
                android:textSize="24sp"/>

            <!-- Options Button aligned to the end -->
            <ImageView
                android:id="@+id/options_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:contentDescription="Options"
                android:textColor="@color/colorTextRV"                android:src="@drawable/more"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- Vocabulary Type -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vrType"
                android:textColor="@color/colorTextRV"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/vocab_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vocabulary Type"
                android:textColor="@color/colorTextRV"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Vocabulary Meanings -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meanings: "
                android:textColor="@color/colorTextRV"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/vocab_meanings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meanings"
                android:textColor="@color/colorTextRV"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Vocabulary Synonyms -->
        <LinearLayout
            android:id="@+id/synonymBlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:paddingTop="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Synonyms: "
                android:textColor="@color/colorTextRV"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/vocab_synonyms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Synonyms"
                android:textColor="@color/colorTextRV"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Vocabulary Notes -->
        <LinearLayout
            android:id="@+id/noteBlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:paddingTop="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes: "
                android:textColor="@color/colorTextRV"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/vocab_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:textColor="@color/colorTextRV"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>